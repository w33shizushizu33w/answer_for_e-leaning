            <div class="card">
                <div class="card-action light-blue darken-2 white-text"> 
                    <h6>Activity Feed</h6> 
                </div>
                <ul class="collection">
                    <%= render 'activity/feed' if logged_in?%>
                </ul>
                 <%= will_paginate @activities %>
            </div>
        </div>
    </div>
</div>