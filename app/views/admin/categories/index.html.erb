<% provide(:title, "All Categories")%>
<div class=container>
    <div class=row>
        <h1> All Categories </h1>
        <%= link_to "Add Category", new_admin_category_path, class: 'btn btn-primary' %>
        <%= will_paginate %>
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Words</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                <% @categories.each do |category| %>
                <tr>
                    <td><%= category.title %></td>
                    <td><%= category.description %></td>
                    <td><%= category.words.count %></td>
                    <td>
                    <%= link_to "Add Word", admin_category_words_path(category), 
                    class: 'btn btn-primary' %> 
                    <%= link_to "Edit", edit_admin_category_path(category), 
                    class: 'btn blue lighten-1' %> 
                    <%= link_to "Delete", [:admin, category], method: :delete, 
                    data: {confirm: "Are you sure you want to delete this category?"},
                    class: 'btn red darken-1' %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <%= will_paginate %>
    </div>
</div>