<%= form_for([@lesson, @answer]) do |f| %>
<br><br>
<%= render 'shared/error_messages', object: @answer %>
<div class="container">
    <div class="row">
        <div class="col s12 m12">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title"> <%= @lesson.category.title %> 
                    <span class="card-title right"> <%= @progress %> of <%= @lesson.category.words.length %></span>                           
                    <h1 class="center"><%= @word.content %></h1>
                    <%= f.hidden_field :word_id, value: @word.id %>
                </div>
                <div class="card-action">
                    <% @word.choices.each do |choice| %>
                        <div class = "button-size">
                            <center><%= f.label :choice_id, choice.content, value: choice.id, class: "btn" %></center> <br>
                            <%= f.radio_button :choice_id, choice.id, onchange: 'this.form.submit();' %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>  
<% end %>